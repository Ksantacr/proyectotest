celeste = #00DBFF
naranja = #FF5D00
h1
	font-size 1.5em
h2
	font-size 1.2em
header
	border 1px dashed black
	postion relative
	height 120px
	top 50%
	.avatar
		position absolute
		border 1px dashed black
		top 0
		right 0
		height 100px
		width 100px
	.logo
		border 1px dashed black
		border-radius 50%
		height 100px
		width 100px

.left
	float left
.right
	float right

.opciones
	position fixed
	bottom 0
	li
		display inline-block
		a
			color black
			background celeste
			padding 1em
			margin 0
			border-radius 0.3em
			transition all 1.5s
		a:hover
			color white
			text-decoration none

		
